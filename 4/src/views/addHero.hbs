<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Hero</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/assets/css/nav.css" />
  </head>
  <body>
    <div class="container mt-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/"><svg
            xmlns="http://www.w3.org/2000/svg"
            width="40"
            height="40"
            fill="#ffffff"
            class="bi bi-arrow-left-circle"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"
            />
          </svg>
        </a>
        <div>
          {{#if isLogin}}
            <div class="user-info text-center">
              <p class="mb-1 text-white fw-bold">{{user.name}}</p>
              <div class="button-group">
                <a href="/logout" class="d-inline">
                  <button class="btn btn-warning">Logout</button>
                </a>
                <a href="/addHero"><button class="btn btn-warning">Add Hero</button></a>
                <a href="/addType"><button class="btn btn-warning">Add Type</button></a>
              </div>
            </div>
          {{else}}
            <a href="/login"><button class="btn btn-success">Login</button></a>
            <a href="/register"><button
                class="btn btn-success"
              >Register</button></a>
            <a href="/addType"><button class="btn btn-warning">Add Type</button></a>
          {{/if}}
        </div>
      </div>

      <form method="post" action="/addHero" enctype="multipart/form-data">
        <div class="col-md-8 offset-md-2">
          <h1 class="text-warning text-center">Detail Hero</h1>
          <label for="inputName" class="form-label fw-bold">Name Hero</label>
          <input type="text" class="form-control" name="nameHero" />
        </div>
        <div class="col-md-8 offset-md-2">
          <label for="TypeHero" class="form-label">Type</label>
          <select id="TypeHero" name="TypeHero" class="form-select" required>
            {{#each Type}}
              <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>
          <div class="form-group">
            <label for="image">Image</label>
            <input
              type="file"
              class="form-control"
              id="imageHero"
              name="imageHero"
            />
          </div>
        </div>
        <div class="col-md-8 offset-md-2 d-flex justify-content-end mt-4">
          <input type="submit" value="Submit" class="btn btn-danger w-25" />
        </div>
      </form>
    </div>
    <!-- end contact content -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>